# Environment variables for development
# Copy this to .env and update with your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/scribeflow
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development
DEBUG=true

# Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
COHERE_API_KEY=your_cohere_api_key

# Publishing APIs
MEDIUM_CLIENT_ID=your_medium_client_id
MEDIUM_CLIENT_SECRET=your_medium_client_secret

# Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Code Execution (Sandbox)
DOCKER_ENABLED=true
CODE_EXECUTION_TIMEOUT=30

# File Storage
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["jpg","jpeg","png","gif","pdf","txt","md","py","js","dart"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=INFO
